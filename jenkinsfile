pipeline {
    agent any

    tools {
        maven "M3"
    }

 environment {
        DOCKER_IMAGE = "tp-foyer"
        DOCKER_TAG = "latest"
    }
    stages {

        stage('Git') {
            steps {
                // Get some code from a GitHub repository
                git 'https://github.com/skill-exchange-2025/DEVOPS.git'

            }
        }

        stage('Maven Build') {
            steps {
                // Run Maven build with tests
                bat "mvn clean test package"
            }
        }

        stage('Maven Test') {
            steps {

                // Run Maven build with tests
                bat "mvn test"
            }
        }
          stage('Docker Build') {
                    steps {
                        script {
                            docker.build("${DOCKER_IMAGE}:${DOCKER_TAG}")
                        }
                    }
                }

                stage('Docker Push') {
                    when {
                        expression { env.BRANCH_NAME == 'master' }
                    }
                    steps {
                        script {
                            docker.withRegistry('https://registry.hub.docker.com', 'docker-hub-credentials') {
                                docker.image("${DOCKER_IMAGE}:${DOCKER_TAG}").push()
                            }
                        }
                    }
                }

        stage('SonarQube analysis') {
            steps {
                withSonarQubeEnv('SonarQube') {
                    bat 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.7.0.1746:sonar'
                }
            }
        }
    }


    post {
        always {
            // Archive test results (if any) and correct artifact
            junit '**/target/surefire-reports/*.xml' // Updated pattern
            archiveArtifacts 'target/*.jar' // Archives all JARs
        }

        unstable {
            echo "Build is unstable due to failing tests."
        }
    }
}
