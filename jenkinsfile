pipeline {
    agent any

    tools {
        maven 'M3' // Nom de l'installation Maven configurÃ©e dans Jenkins
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package -DskipTests'
            }
        }

        stage('Test') {
            steps {
                sh 'mvn test'
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml' // Publication des rapports de test
                }
            }
        }
        stage('Deploy Jar') {
            steps {
                sh 'java -jar target/*.jar &'
              }
       }

    }
}